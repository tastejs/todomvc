<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
            "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
	<head>
		<title><%= baseName %>.List Demo</title>
        <style type='text/css'>
            body {font-family: verdana}
        </style>
	</head>
	<body>
	    <h1><%= baseName %>.List Demo</h1>
		<ul id='<%= plural %>'></ul>
		<a href='javascript://' id='create'>Create <%= className %></a>
		<script type='text/javascript' 
                src='../../../steal/steal.js'>
        </script>
		<script type='text/javascript'>
			steal('<%= appPath %>/<%= underscore %>/list','<%= appPath %>/fixtures',function(){
				
				$('#<%= plural %>').<%= appPath %>_<%= underscore %>_list();
				
				$('#create').click(function(){
					new <%= name %>({
						name: "Grilled Cheese",
						description: "Bread and Cheese"
					}).save();
				})
			})
		</script>
	</body>
</html>