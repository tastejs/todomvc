{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"isolatedModules": false,
		"jsx": "react",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"filesGlob": ["**/*.ts", "**/*.tsx", "!node_modules/**"],
	"files": [
		"constants.ts",
		"model/interfaces.ts",
		"model/todoModel.ts",
		"utils/utils.ts",
		"app.tsx",
		"components/footer.tsx",
		"components/todoItem.tsx"
	],
	"exclude": [],
	"baseUrl": "types",
	"typeRoots": ["types"]
}
